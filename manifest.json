{
  "name": "Remember Inputs",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Remeber input and textarea values.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "html/popup.html"
  },
  "web_accessible_resources": [
    "jquery-3.1.1.slim.min.js",
    "remember-inputs.js"
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery-3.1.1.slim.min.js",
        "remember-inputs.js"
      ],
      "run_at": "document_end"
    }
  ]

}
